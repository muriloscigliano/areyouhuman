---
interface Props {
  sectionName?: string;
  isTitle?: boolean;
  title?: string;
  stepNumber?: string;
  stepLabel?: string;
  stepTitle?: string;
  stepDescription?: string;
  stepTitleSize?: string;
}

const {
  sectionName = 'Framework Audit',
  isTitle = false,
  title = '',
  stepNumber = '',
  stepLabel = '',
  stepTitle = '',
  stepDescription = '',
  stepTitleSize = '80px'
} = Astro.props;

const formattedDescription = stepDescription ? stepDescription.replace(/&#10;/g, '\n') : '';
---

<section 
  class:list={['framework-section', { 'framework-section--title': isTitle }]}
  data-name={sectionName}
>
  {isTitle ? (
    <h2 class="framework-title">{title}</h2>
  ) : (
    <div class="framework-step">
      <div class="framework-step-spacer"></div>
      <div class="framework-step-content">
        <div class="framework-step-header">
          <p class="step-number">{stepNumber}</p>
          <p class="step-label">{stepLabel}</p>
        </div>
        <h3 class="step-title" style={`font-size: ${stepTitleSize}`}>{stepTitle}</h3>
        <p class="step-description">{formattedDescription}</p>
      </div>
    </div>
  )}
</section>

<style>
.framework-section {
  background: #000;
  min-height: 1117px;
  padding: 72px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.framework-section--title {
  justify-content: center;
}

.framework-title {
  font-family: 'PP Neue Machina', sans-serif;
  font-weight: 800;
  font-size: 160px;
  line-height: 1;
  color: #fff;
  text-align: center;
  text-transform: uppercase;
  width: 1288px;
  margin: 0;
}

.framework-step {
  width: 100%;
  display: flex;
  gap: 10px;
  height: 845px;
  align-items: flex-start;
}

.framework-step-spacer {
  flex: 1;
  background: #0f0f0f;
  height: 100%;
  border-radius: 12px;
  min-width: 0;
  min-height: 0;
}

.framework-step-content {
  flex: 1;
  background: #0f0f0f;
  height: 100%;
  padding: 128px 72px;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  min-width: 0;
  min-height: 0;
}

.framework-step-header {
  display: flex;
  flex-direction: column;
  gap: 10px;
  align-items: flex-start;
  justify-content: center;
  font-family: 'PP Neue Machina', sans-serif;
  font-weight: 400;
  font-size: 32px;
  line-height: 0.9;
  color: #fff;
  text-transform: uppercase;
  white-space: nowrap;
  width: 100%;
}

.step-number {
  margin: 0;
}

.step-label {
  margin: 0;
}

.step-title {
  font-family: 'PP Neue Machina', sans-serif;
  font-weight: 800;
  font-size: 80px;
  line-height: 0.9;
  color: #fff;
  text-transform: uppercase;
  width: 100%;
  margin: 0;
}

.step-description {
  font-family: 'PP Supply Mono', monospace;
  font-weight: 200;
  font-size: 18px;
  line-height: 1.3;
  color: #fff;
  white-space: pre-line;
  width: 100%;
  margin: 0;
}

@media (max-width: 768px) {
  .framework-section {
    padding: 48px 24px;
    min-height: auto;
  }
  
  .framework-title {
    font-size: 60px;
    width: 100%;
  }
  
  .framework-step {
    flex-direction: column;
    height: auto;
    gap: 24px;
  }
  
  .framework-step-spacer {
    display: none;
  }
  
  .framework-step-content {
    padding: 48px 24px;
    gap: 32px;
  }
  
  .step-title {
    font-size: 48px;
  }
  
  .step-description {
    font-size: 16px;
    white-space: normal;
  }
}
</style>

