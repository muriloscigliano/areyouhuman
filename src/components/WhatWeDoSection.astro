---
interface Props {
  sectionName?: string;
  label?: string;
  title?: string;
  description?: string;
  variant?: string;
  italic?: boolean;
}

const {
  sectionName = 'What We Do Section',
  label = '',
  title = '',
  description = '',
  variant = 'default',
  italic = false
} = Astro.props;
---

<section 
  class:list={['what-we-do-section', `what-we-do-section--${variant}`]}
  data-name={sectionName}
>
  <div class="what-we-do-header">
    <p class="section-label">{label}</p>
    <h2 class:list={['section-title', { 'section-title--italic': italic }]}>
      {title}
    </h2>
  </div>
  <div class="what-we-do-content">
    <p class="section-description" set:html={description}></p>
  </div>
</section>

<style>
.what-we-do-section {
  min-height: 1117px;
  padding: 72px;
  display: flex;
  flex-direction: column;
  gap: 80px;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.what-we-do-section--default {
  background: #0f0f0f;
}

.what-we-do-section--dark {
  background: #131313;
}

.what-we-do-section--darker {
  background: #161616;
}

.what-we-do-header {
  width: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  color: #fff;
}

.section-label {
  font-family: 'PP Neue Machina', sans-serif;
  font-weight: 800;
  font-size: 24px;
  line-height: 1;
  white-space: nowrap;
}

.section-title {
  font-family: 'PP Neue Machina', sans-serif;
  font-weight: 800;
  font-size: 96px;
  line-height: 0.9;
  text-transform: uppercase;
  width: 1177px;
  margin: 0;
}

.section-title--italic {
  font-style: italic;
  font-size: 60px;
  line-height: 1.1;
}

.what-we-do-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 48px;
  align-items: flex-end;
  justify-content: center;
}

.section-description {
  font-family: 'PP Supply Mono', monospace;
  font-weight: 200;
  font-size: 28px;
  line-height: 1.2;
  color: #fff;
  width: 1177px;
}

.section-description :global(span[style*="font-weight: 400"]),
.section-description :global(.bold) {
  font-weight: 400;
}

@media (max-width: 768px) {
  .what-we-do-section {
    padding: 48px 24px;
    min-height: auto;
    gap: 48px;
  }
  
  .what-we-do-header {
    flex-direction: column;
    gap: 24px;
  }
  
  .section-title {
    font-size: 48px;
    width: 100%;
  }
  
  .section-title--italic {
    font-size: 36px;
  }
  
  .section-description {
    font-size: 18px;
    width: 100%;
  }
}
</style>

